							ChatLog_SetTooltipText(CHAT_LOG_CHAT_CHECKBOX_TOOLTIP_TITLE, CHAT_LOG_CHAT_CHECKBOX_TOOLTIP_MSG1, CHAT_LOG_CHAT_CHECKBOX_TOOLTIP_MSG2);
						</OnEnter>
						<OnLeave>
							GameTooltip:Hide();
						</OnLeave>
