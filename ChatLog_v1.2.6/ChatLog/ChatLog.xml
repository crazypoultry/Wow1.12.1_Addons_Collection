							ChatLog_AlphaSlider_OnLoad();
						</OnLoad>
						<OnValueChanged>
							ChatLog_OnSliderValueChange(ChatLogAlphaSlider:GetValue());
						</OnValueChanged>
					</Scripts>
				</Slider>
			</Frames>
			<Scripts>
				<OnLoad>
					ChatLog_OnLoad();
				</OnLoad>
				<OnEvent>
					ChatLog_OnEvent(event);
				</OnEvent>
				<OnHide>
					PlaySound("gsTitleOptionExit");
				</OnHide>
			</Scripts>
