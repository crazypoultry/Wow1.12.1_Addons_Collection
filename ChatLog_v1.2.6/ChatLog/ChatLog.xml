						<Anchor point="TOP">
							<Offset>
								<AbsDimension x="105" y="-17"/>
							</Offset>
						</Anchor>
					</Anchors>
					<Scripts>
						<OnLoad>
							ChatLogChatCheckBoxText:SetText(CHAT_LOG_CHAT_CHECKBOX_TITLE);
						</OnLoad>
						<OnClick>
							ChatLog_LogChatIntoFile_Toggle();
						</OnClick>
