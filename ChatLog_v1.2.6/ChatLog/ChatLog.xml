	</Frames>
	<Scripts>
		<OnMouseDown>
			if ( arg1 == "LeftButton" ) then
				this:StartMoving();
			end
			if ( arg1 == "RightButton" ) then
				ToggleDropDownMenu(1, nil, ChatLogFrameDropDown, "ChatLogDropdownButton", 0, 0);
			end
		</OnMouseDown>
		<OnMouseUp>
			this:StopMovingOrSizing();
		</OnMouseUp>
		<OnLoad>
			ChatLogCurrentLineText:SetTextHeight(10);
		</OnLoad>
