	<Script file="FriendsButton.lua"/>
	<Frame name="FriendsButtonFrame" parent="UIParent" hidden="false">
		<Scripts>
			<OnLoad>
				bFriendsButton_OnLoad();
			</OnLoad>
<!-- 			<OnUpdate>
				DEFAULT_CHAT_FRAME:AddMessage("11")
			</OnUpdate> -->
			<OnEvent>
				if event == "FRIENDLIST_UPDATE" then FriendsMicroButtonCount:SetText(GetFriendsOnline()); end
			</OnEvent>
		</Scripts>
	</Frame>
	<Button name="FriendsMicroButton" frameStrata="LOW" parent="FriendsButtonFrame">
		<Size x="32" y="32"/>
		<Anchors>
			<Anchor point="BOTTOM" relativeTo="ChatFrameMenuButton" relativePoint="TOP">
				<Offset>
					<AbsDimension x="0" y="4"/>
				</Offset>
			</Anchor>
		</Anchors>
		<Layers>
			<Layer level="ARTWORK">
				<FontString name="FriendsMicroButtonCount" inherits="GameFontHighlightSmall" text="0">
					<Anchors>
						<Anchor point="BOTTOM" relativeTo="ChatFrameMenuButton" relativePoint="TOP">
							<Offset>
								<AbsDimension x="0" y="7"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Scripts>
			<OnLoad>
				FriendsMicroButtonCount:SetText(GetFriendsOnline());
				FriendsMicroButtonCount:SetShadowOffset(1, 1);
			</OnLoad>
			<OnClick>
				ToggleFriendsFrame(1);
			</OnClick>
<!-- 			<OnEvent>
				if event == "FRIENDLIST_UPDATE" then FriendsMicroButtonCount:SetText(GetFriendsOnline()); end
			</OnEvent> -->
		</Scripts>
		<NormalTexture file="Interface\AddOns\bFriendsFrame\Textures\UI-ChatIcon-BattleBro-Up"/>
		<PushedTexture file="Interface\AddOns\bFriendsFrame\Textures\UI-ChatIcon-BattleBro-Down"/>
		<HighlightTexture file="Interface\AddOns\bFriendsFrame\Textures\UI-ChatIcon-BattleBro-Hi" alphaMode="ADD"/>
	</Button>
