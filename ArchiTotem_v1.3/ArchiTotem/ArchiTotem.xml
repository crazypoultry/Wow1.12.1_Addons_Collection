	<Script file="ArchiTotem.lua" />
	<Button name="ArchiTotem_ButtonTemplate" movable="true" virtual="true" inherits="ActionBarButtonTemplate">
		<Size>
			<AbsDimension x="40" y="40"/>
		</Size>
		<Scripts>
			<OnLoad>
				this:RegisterForDrag("RightButton");
				this.TimeSinceLastUpdate = 0;
			</OnLoad>
			<OnDragStart>
				ArchiTotem_OnDragStart();
			</OnDragStart>
			<OnDragStop>
				ArchiTotem_OnDragStop();
			</OnDragStop>
			<OnClick>
				ArchiTotem_OnClick();
			</OnClick>
			<OnEnter>
				ArchiTotem_OnEnter();
			</OnEnter>
			<OnLeave>
				this.updateTooltip = nil;
				GameTooltip:Hide();
				ArchiTotem_OnLeave();
			</OnLeave>
			<OnUpdate>
				ArchiTotem_OnUpdate(arg1);
			</OnUpdate>
		</Scripts>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture name="$parentTexture"/>
			</Layer>
			<Layer level="ARTWORK">
				<Texture name="$parentCooldownBg" file="Interface\Tooltips\UI-Tooltip-Background" hidden="true">
					<Size>
						<AbsDimension x="34" y="16"/>
					</Size>
					<Anchors>
						<Anchor point="CENTER">
							<Offset>
								<AbsDimension x="0" y="-5"/>
							</Offset>
						</Anchor>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="OVERLAY">
				<FontString name="$parentCooldownText" inherits="GameFontNormal" text="">
					<Anchors>
						<Anchor point="CENTER" relativeTo="$parent" relativePoint="CENTER">
							<Offset>
								<AbsDimension x="0" y="-5"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<HighlightTexture alphaMode="ADD" file="Interface\Buttons\ButtonHilight-Square"/>
	</Button>

